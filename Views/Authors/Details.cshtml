@model WorkshopImproved.Models.Author

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nationality)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nationality)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books)
        </dt>
        <dd class="col-sm-10">
            @foreach (var book in Model.Books)
            {
                  <p>Title: @book.Title</p>

                  <p>

                @if (File.Exists(("C:/Users/Miroslav Jovanovic/Documents/WorkshopImproved/wwwroot/images/" + @book.FrontPage)))

                {
                    <img src="~/images/@book.FrontPage"
                         class="rounded-circle"
                         height="100" width="100"
                 asp-append-version="true" />
                }

                else
                {
                    <img src="@book.FrontPage"
                         class="rounded-circle"
                         height="100" width="100"
                 asp-append-version="true" />
                }
                </p>
                 
                   <p>Year Published: @book.YearPublished</p>
                    
                   <p>Average rating: @book.Prosek</p>

                   <p>Number of pages: @book.NumPages</p>

                   <p>Description: @book.Description</p>

                  <p>Publisher: @book.Publisher</p>

                 
                <br />
                <hr />
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
